struct Params {
	counter: int
}
struct Result {
	payload: int
}

fn loop(c: int, acc: int) -> int {
	if (c > 0) {
		loop(c - 1, acc + c);
	} else {
		acc
	}
}

fn main(par: Params) -> Result {
	let
		counter = par.counter * 2;
		result = loop(counter, 0);//io qua dovrei poter usare anche counter invece che par.counter avendolo gia definito
	in
		Result {
			payload: result
		}
}